PH_RUNAPP_USER=""							# The user account our application will run as
PH_RUNAPP_CMD=""							# The full path of the start script used to launch our application
PH_RUNAPP_TTY=""							# The TTY our application will start on

if [[ "$USER" == "$PH_RUNAPP_USER" && `tty` == "/dev/$PH_RUNAPP_TTY" ]]
then
	$PH_RUNAPP_CMD
fi
